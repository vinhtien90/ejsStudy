<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Single</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

</head>
<body>
    <div class="container" style="margin-top: 50px">
        <h2>List Single</h2>
        <br>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                Create New
              </button>
        <div>
            <p style="font-weight: bold;color:red" class="text-center"><%=message%></p>
        </div>
        <br>
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">#ID</th>
                <th scope="col">Name</th>
                <th scope="col">Avatar</th>
                <th scope="col">Link</th>
                <th scope="col">Modify</th>
            </tr>
            </thead>
            <tbody>
            <% arraySinger.forEach(element=>{ %>
                
                <tr>
                <th scope="row"><%=element._id%></th>
                <td><%=element.name%></td>
                <td><img src= <%=avatarLink%><%=element.avatar%>></td>
                <td><a target="_blank" href= <%=profileLink%><%=element.link%>><%=element.link%></a></td>
                <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal<%=element._id%>">
                        Edit
                      </button> <a onclick="confirm('Are u sure to del?')" href="/home/delete/<%=element._id%>" class="btn btn-danger text-white">X</a></td>
                <tr>
                    <!-- Modal -->
                <div class="modal fade" id="exampleModal<%=element._id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel<%=element._id%>" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel<%=element._id%>">Modal title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                    <form action="/home/edit/<%=element._id%>" method="POST" >
                                    
                                        <div class="form-group">
                                            <label>Name</label>
                                            <input type="text" class="form-control" name="name" placeholder="Enter Name" value="<%=element.name%>">
                                        </div>                                
                                        <div class="form-group">
                                            <label>Link Profile</label>
                                            <input type="text" class="form-control" name="profile" placeholder="profile" value="<%=element.link%>">
                                        </div>
                                        <div class="form-group">
                                                <label>Link Avatar</label>
                                                <input type="text" class="form-control" name="avatar" placeholder="avatar" value="<%=element.avatar%>">
                                            </div>
                                        <button type="submit" class="btn btn-primary">Save</button>
                                    </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                
                            </div>
                            </div>
                        </div>
                        </div>
                    <!-- Model end -->
            <%}) %>
           
            </tbody>
        </table>
           
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Add New Singer</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                            <form action="/home" method="POST" >
                                
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" class="form-control" name="name" placeholder="Enter Name">
                                </div>                                
                                <div class="form-group">
                                    <label>Link Profile</label>
                                    <input type="text" class="form-control" name="profile" placeholder="profile">
                                </div>
                                <div class="form-group">
                                        <label>Link Avatar</label>
                                        <input type="text" class="form-control" name="avatar" placeholder="avatar">
                                    </div>
                                <button type="submit" class="btn btn-primary">Create</button>
                            </form>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                      <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
                    </div>
                  </div>
                </div>
              </div>

            
              


    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>